{
  "compilerOptions": {
    "target": "es2020",

    "module": "esnext",
    "moduleResolution": "bundler",

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "incremental": true,

    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true
  }
}